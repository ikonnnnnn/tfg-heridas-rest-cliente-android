<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/gris" />
            <stroke
                android:width="1dp"
                android:color="@color/gris" />
            <corners
                android:radius="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/azul" />
            <stroke
                android:width="1dp"
                android:color="@color/azul" />
            <corners
                android:radius="0dp" />
        </shape>
    </item>
</selector>